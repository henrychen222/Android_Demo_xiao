<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/re_title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#33CCFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="动态"
            android:textColor="#FCFCFC"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="管理"
            android:textColor="#FCFCFC"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re_title"
        android:paddingLeft="30dp"
        android:paddingRight="25dp">

        <RelativeLayout
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/kongjian"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:src="@mipmap/channel_qzone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kongjian"
                android:text="好友动态" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/fujin"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:src="@mipmap/feu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fujin"
                android:text="附近的人" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/xingqu"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/iei" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/xingqu"
                android:text="兴趣部落" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/viewxian"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/head"
        android:background="#E6E6FA" />

    <View
        android:id="@+id/viewkong"
        android:layout_width="fill_parent"
        android:layout_height="15dp"
        android:layout_below="@+id/viewxian"
        android:background="#FFFFFF" />

    <View
        android:id="@+id/viewxian1"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/viewkong"
        android:background="#E6E6FA" />

    <RelativeLayout
        android:id="@+id/liebiao"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewkong">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:id="@+id/viewxian2"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#E6E6FA" />

            <RelativeLayout
                android:id="@+id/user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFAF0"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/re_imag"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/gift_icon_08" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/re_imag"
                    android:text="游戏"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/card_arrow" />
            </RelativeLayout>

            <View
                android:id="@+id/viewxian3"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#E6E6FA" />

            <RelativeLayout
                android:id="@+id/user1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFAF0"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/re_imag2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/qvip_pay_balance_treasure_service_icon" />

                <TextView
                    android:id="@+id/username2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/re_imag2"
                    android:text="购物"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/card_arrow" />
            </RelativeLayout>

            <View
                android:id="@+id/viewxian44"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#E6E6FA" />

            <RelativeLayout
                android:id="@+id/user22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFAF0"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/re_imag33"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ffm" />

                <TextView
                    android:id="@+id/username33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/re_imag33"
                    android:text="阅读"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/card_arrow" />
            </RelativeLayout>

            <View
                android:id="@+id/viewxian444"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#E6E6FA" />

            <RelativeLayout
                android:id="@+id/user222"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFAF0"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/re_imag333"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/fmx" />

                <TextView
                    android:id="@+id/username333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/re_imag333"
                    android:text="附近的群"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/card_arrow" />
            </RelativeLayout>

            <View
                android:id="@+id/viewxian4444"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#E6E6FA" />

            <RelativeLayout
                android:id="@+id/user2222"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFAF0"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/re_imag3333"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/bra" />

                <TextView
                    android:id="@+id/username3333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/re_imag3333"
                    android:text="应用宝"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/card_arrow" />
            </RelativeLayout>

            <View
                android:id="@+id/viewxian4"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#E6E6FA" />

            <RelativeLayout
                android:id="@+id/user2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFAF0"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/re_imag3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/grm" />

                <TextView
                    android:id="@+id/username3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/re_imag3"
                    android:text="热门活动"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/card_arrow" />
            </RelativeLayout>

            <View
                android:id="@+id/viewxian5"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#E6E6FA" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_buttom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFAFA">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/xiaoxi"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1.0"
                android:padding="0dp"
                android:src="@mipmap/skin_tab_icon_conversation_normal" />

            <ImageView
                android:id="@+id/lianxiren"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1.0"
                android:padding="0dp"
                android:src="@mipmap/skin_tab_icon_contact_normal" />

            <ImageView
                android:id="@+id/dongtai"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1.0"
                android:padding="0dp"
                android:src="@mipmap/skin_tab_icon_plugin_selected" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>