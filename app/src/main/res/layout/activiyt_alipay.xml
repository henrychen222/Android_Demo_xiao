<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/re_title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#000000">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="财富"
            android:textColor="#FCFCFC"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="设置"
            android:textColor="#FCFCFC"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re_title"
        android:paddingLeft="10dp"
        android:paddingRight="5dp">

        <ImageView
            android:id="@+id/re_imag"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ico_user1" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/re_imag"
            android:text="zxl"
            android:textColor="#E6195E"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/re_imag"
            android:text="0101010010@qq.com"
            android:textColor="#696969"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/arrow"
            android:src="@mipmap/qq_profilecard_icon_qrcode" />

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/card_arrow" />
    </RelativeLayout>

    <View
        android:id="@+id/viewxian1"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/head"
        android:background="#E6E6FA" />

    <RelativeLayout
        android:id="@+id/qian"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/viewxian1"
        android:paddingLeft="2dp">

        <View
            android:id="@+id/viewxian2"
            android:layout_width="2dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:background="#E6E6FA" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/viewxian2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="余额" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="10,000,000" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/viewxian2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="银行卡" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="10张" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/viewxian3"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/qian"
        android:background="#E6E6FA" />

    <View
        android:id="@+id/viewkong"
        android:layout_width="fill_parent"
        android:layout_height="15dp"
        android:layout_below="@+id/viewxian3"
        android:background="#F5FFFA" />

    <RelativeLayout
        android:id="@+id/yuebao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewkong"
        android:padding="5dp">

        <ImageView
            android:id="@+id/re_imag3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/app_fund" />

        <TextView
            android:id="@+id/username3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/re_imag3"
            android:text="余额宝"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/card_arrow" />
    </RelativeLayout>

    <View
        android:id="@+id/viewxian5"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/yuebao"
        android:background="#E6E6FA" />

    <RelativeLayout
        android:id="@+id/licai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewxian5"
        android:padding="5dp">

        <ImageView
            android:id="@+id/re_imag2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/app_appcenter" />

        <TextView
            android:id="@+id/username123"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/re_imag2"
            android:text="招财宝"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/xx12333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/card_arrow1"
            android:paddingRight="15dp"
            android:text="定期理财"
            android:textColor="#B0C4DE"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/card_arrow1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/card_arrow" />
    </RelativeLayout>

    <View
        android:id="@+id/viewxian6"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/licai"
        android:background="#E6E6FA" />

    <RelativeLayout
        android:id="@+id/yulebao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewxian6"
        android:padding="5dp">

        <ImageView
            android:id="@+id/re_imag31"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/app_facepay" />

        <TextView
            android:id="@+id/username31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/re_imag31"
            android:text="娱乐宝"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/card_arrow" />
    </RelativeLayout>

    <View
        android:id="@+id/viewxian7"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/yulebao"
        android:background="#E6E6FA" />

    <RelativeLayout
        android:id="@+id/gupiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewxian7"
        android:padding="5dp">

        <ImageView
            android:id="@+id/re_imag311"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/app_stock" />

        <TextView
            android:id="@+id/username312"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/re_imag311"
            android:text="股票"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/card_arrow" />
    </RelativeLayout>

    <View
        android:id="@+id/viewxian8"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/gupiao"
        android:background="#E6E6FA" />

    <View
        android:id="@+id/viewkong1"
        android:layout_width="fill_parent"
        android:layout_height="15dp"
        android:layout_below="@+id/viewxian8"
        android:background="#F5FFFA" />

    <View
        android:id="@+id/viewxian9"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/viewkong1"
        android:background="#E6E6FA" />

    <RelativeLayout
        android:id="@+id/zhima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewxian9"
        android:padding="5dp">

        <ImageView
            android:id="@+id/re_imag1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/app_aligame" />

        <TextView
            android:id="@+id/username2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/re_imag1"
            android:text="芝麻信用分"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/yuandian"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/username2"
            android:src="@mipmap/qq_aio_plugin_red_point" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/card_arrow" />
    </RelativeLayout>

    <View
        android:id="@+id/viewxian10"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/zhima"
        android:background="#E6E6FA" />

    <RelativeLayout
        android:id="@+id/huabei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewxian10"
        android:padding="5dp">

        <ImageView
            android:id="@+id/re_imag11"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/app_aapay" />

        <TextView
            android:id="@+id/username1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/re_imag11"
            android:text="花呗"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/card_arrow" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/hongbao"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1.0"
                    android:padding="0dp"
                    android:src="@mipmap/ico_user4" />

                <RelativeLayout
                    android:id="@+id/jiao1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1.0"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/dianziquan"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1.0"
                        android:padding="5dp"
                        android:src="@mipmap/ico_fujin1" />

                    <TextView
                        android:id="@+id/san"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/dianziquan"
                        android:layout_marginRight="8dp"
                        android:paddingTop="4dp"
                        android:text="3"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/jiao2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1.0"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/xingchengdan"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1.0"
                        android:padding="5dp"
                        android:src="@mipmap/ico_fujin3" />

                    <TextView
                        android:id="@+id/hui"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/xingchengdan"
                        android:layout_marginRight="8dp"
                        android:paddingTop="5dp"
                        android:text="惠"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/huiyuan"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1.0"
                    android:padding="0dp"
                    android:src="@mipmap/ico_zhuce3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center_horizontal"
                    android:text="支付宝" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center_horizontal"
                    android:text="服务窗" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center_horizontal"
                    android:text="探索" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center_horizontal"
                    android:text="财富" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>