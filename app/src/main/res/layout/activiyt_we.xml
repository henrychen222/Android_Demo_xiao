<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/re_title"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:background="@mipmap/default_blank" >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/left" />

        <ImageView
            android:id="@+id/jinru"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/common_forward_normal" />

        <ImageView
            android:id="@+id/header"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:src="@mipmap/ico_user1" />

        <TextView
            android:id="@+id/nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header"
            android:layout_centerHorizontal="true"
            android:text="zhouxiaol"
            android:textColor="#FF0000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/nick"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/nick"
            android:text="level  13"
            android:textColor="#ff00ff" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/re_title" >

        <ImageView
            android:id="@+id/money"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/onlinestatus_invisible" />

        <TextView
            android:id="@+id/wenzi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/money"
            android:text="66" />

        <ImageView
            android:id="@+id/xiaolian"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/wenzi"
            android:src="@mipmap/chat_bottom_smile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="#FFFF00"
            android:padding="0dp"
            android:text="签到送金币"
            android:textColor="#FF0000" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re_title"
        android:background="#FFFAF0"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/re_imag"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/mission_coin_bag" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/re_imag"
            android:text="天天刮奖"
            android:textColor="#E6195E"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="18dp"
            android:src="@mipmap/card_arrow" />
    </RelativeLayout>

    <View
        android:id="@+id/vie"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/user"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#E6E6FA" />

    <RelativeLayout
        android:id="@+id/usert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vie"
        android:background="#FFFAF0"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/re_imag2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@mipmap/my_gift_bag_entrance_icon" />

        <TextView
            android:id="@+id/username2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/re_imag2"
            android:text="我的奖品"
            android:textColor="#E6195E"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="18dp"
            android:src="@mipmap/card_arrow" />
    </RelativeLayout>

</RelativeLayout>